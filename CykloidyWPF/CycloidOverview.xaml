<Window x:Class="CykloidyWPF.CycloidOverview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CykloidyWPF"
        mc:Ignorable="d"
        Title="CycloidOverview" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MaxHeight="30"/>
            <RowDefinition Height="1*" MaxHeight="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MaxWidth="150"></ColumnDefinition>
            <ColumnDefinition Width="1*" MaxWidth="150"></ColumnDefinition>
            <ColumnDefinition Width="1*" MaxWidth="150"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock TextAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">Cykloidy</TextBlock>
        <Button Grid.Row="1" Click="Button_Click_0">Jednoduchá cykloida</Button>
        <Button Grid.Row="1" Grid.Column="1" Click="Button_Click_1">Epicykloida</Button>
        <Button Grid.Row="1" Grid.Column="2" Click="Button_Click_2">Pericykloida</Button>

    </Grid>
</Window>
